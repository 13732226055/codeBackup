
public class HeapSortCal {
	public void buildHeap(int[] list,int point){
		int parent = 	point/2; //找到索引最大的父节点
		int lchild = parent<<1; //左孩子为父节点×2
		int rchild =(parent<<1)+1;
		int largest = parent;
		//找出一颗子树中最大的节点
		if(lchild<=point&& list[lchild]>list[largest]){
			largest=lchild;
		}
		if(rchild<=point && list[rchild]>list[largest]){
			largest = rchild;
		}
		if(largest!=parent){
			int tmp = list[parent];
			list[parent] = list[largest];
			list[largest]=tmp;
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
